<title><%= title %></title>
<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<div class ="form-container">
    <div class="form-input">  
        <form class="add-inventory" action="/inv/add-inventory" method="post">
            <div>
                <label for="inv_make">Make</label>
                <input type="text" name="inv_make" id="inv_make" required value="<%= inv_make %>">
            </div>
            <div>
                <label for="inv_model">Model</label>
                <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>"/>
            </div>
            <div>
                <label for="inv_year">Year</label>
                <input type="text" id="inv_year" name="inv_year" required pattern="\d{4}" maxlength="4" value="<%= inv_year %>"/>
            </div>
            <div>
                <label for="inv_description">Description</label>
                <textarea id="inv_description" name="inv_description" rows=3 required><%= inv_description %></textarea>
            </div>
            <div>
                <label for="inv_image">Image</label>
                <input type="text" id="inv_image" name="inv_image" required value="<%= inv_image || "/images/vehicles/no-image.png" %>"/>
            </div>
            <div>
                <label for="inv_thumbnail">Thumbnail</label>
                <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inv_thumbnail || "/images/vehicles/no-image-tn.png" %>"/>
            </div>
            <div>
                <label for="inv_price">Price</label>
                <input type="number" id="inv_price" name="inv_price" required min="0" value="<%= inv_price %>"/>
            </div>
            <div>
                <label for="inv_miles">Mileage</label>
                <input type="number" id="inv_miles" name="inv_miles" required min="0" value="<%= inv_miles %>"/>
            </div>
            <div>
                <label for="inv_color">Color</label>
                <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color %>"/>
            </div>
            <div>
                <label for="classification_id">Classification</label>
                <%- classificationList %>
            </div>
            <button type="submit">Add New Vehicle</button>
        </form>       
    </div>
</div>
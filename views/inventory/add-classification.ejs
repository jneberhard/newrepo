<title><%= title %></title>
<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<div class ="form-container">
    <div class="form-input">  
        <form class="add-classification" action="/inv/add-classification" method="post">
            <div>
                <label for="classification_name">New Classification Name</label>
                <input type="text" name="classification_name" id="classification_name" required 
                pattern="^[A-Za-z0-9]+$"
                title="No spaces or special characters allowed. Only use numbers and letters."
                value="<%= classification_name %>">
            </div>
            <p class="notice">Note: Classification name cannot contain special characters or spaces.</p>
            <button type="submit">Add Classification</button>
        </form>
    </div>
</div>